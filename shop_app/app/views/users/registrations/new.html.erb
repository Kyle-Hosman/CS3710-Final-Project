<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), aria: { labelledby: 'signup-heading' }) do |f| %>
  <h1 id="signup-heading">Sign up</h1>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "username", aria: { labelledby: 'signup-heading' } %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", aria: { labelledby: 'signup-heading' } %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", aria: { labelledby: 'signup-heading' } %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", aria: { labelledby: 'signup-heading' } %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", aria: { label: 'Sign up' } %>
  </div>
<% end %>

<%= render "users/shared/links" %>
