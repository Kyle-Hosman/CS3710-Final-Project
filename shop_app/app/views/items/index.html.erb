<p style="color: green"><%= notice %></p>

<% content_for :title, "Items" %>

<div class="container mt-4">
 <h1>Recent Items</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4">
        <div class="card-body">
        <h5 class="card-title"><%= "#{item.name}" %></h5>
        <p class="card-text">Price: <%= item.price %></p>
        <p class="card-text">availability: <%= item.availability %></p>
        <% if user_signed_in? && item.user == current_user %>
          <%= link_to 'Edit', edit_user_item_path(current_user, item), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', user_item_path(current_user, item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        <%= link_to 'Show', item_path(item), class: 'btn btn-primary' %>
      </div>
      </div>
      </div>
    <% end %>
  </div>
</div>
