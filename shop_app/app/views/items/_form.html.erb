<% if @item.errors.any? %>
  <div class="alert alert-danger" aria-live="assertive">
    <h4 class="alert-heading">Errors:</h4>
    <ul>
      <% @item.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-4">
  <%= form_with(model: @item, local: true, aria: { labelledby: 'form-heading' }) do |form| %>
    <h1 id="form-heading"></h1>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", aria: { labelledby: 'form-heading' } %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control", aria: { labelledby: 'form-heading' } %>
    </div>

    <div class="mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.text_field :price, class: "form-control", aria: { labelledby: 'form-heading' } %>
    </div>

    <div class="form-check mb-3">
      <%= form.label :availability, class: "form-check-label" %>
      <%= form.check_box :availability, class: "form-check-input", aria: { labelledby: 'form-heading' } %>
    </div>

    <div class="mb-3">
      <%= form.submit class: "btn btn-primary", aria: { label: 'Submit new item' } %>
    </div>
  <% end %>
</div>
